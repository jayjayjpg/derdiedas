{{page-title "Exercises"}}

<div class="flex flex-col py-4">
  <div class="flex flex-row justify-end">
    <LinkTo class="bg-zinc-500 hover:bg-zinc-600 focus:bg-zinc-600 text-white font-semibold rounded-md p-2" @route="index" data-test-exercise-go-back-home>Go back home</LinkTo>
  </div>

  {{outlet}}

  {{#if this.practiceSession.isLast}}
    <div class="mt-8 text-azure font-bold text-center" data-test-exercise-score>Score: {{this.formattedScore}}</div>
    <div class="basis-1/4 text-center mt-8">
      <button
       class="bg-azure hover:bg-cyan-700 focus:bg-cyan-700 hover:bg-cyan-900 text-white font-semibold rounded-md p-2 text-center"
       type="button" {{on "click" this.finish}} data-test-exercise-finish>Done!</button>
    </div>
  {{/if}}
</div>
