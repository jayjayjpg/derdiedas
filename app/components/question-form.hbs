<section data-test-question-form>
  <p data-test-question-form-prompt>
    <label for={{this.formId}}>Type your answer:</label>
    <span>{{get this.questionPrompt "0"}}</span>
    <Input id={{this.formId}} @value={{@promptAnswer}} disabled={{@showSolution}} onInput={{@onChange}} data-test-question-form-input />
    <span>{{get this.questionPrompt "1"}}</span>
  </p>
  <p data-test-question-form-hint>Use <b>{{if @question.definedArticle "der/die/das..." "ein/eine..."}}</b></p>
  <button disabled={{this.isFormDisabled}} type="button" {{on "click" this.submit}} data-test-question-form-submit>Checkmark</button>

  {{#if @showSolution}}
    <p data-test-question-form-correct-answer>{{@question.fullAnswer}}</p>
    {{#if @question.isCorrect}}
      <p data-test-question-form-success>Checkmark</p>
    {{else}}
      <p data-test-question-form-difference>
        <span data-test-question-form-difference-current>{{@question.userAnswer}}</span>
        <span data-test-question-form-difference-expected>{{@question.answer}}</span>
      </p>
    {{/if}}
  {{/if}}
  </section>
